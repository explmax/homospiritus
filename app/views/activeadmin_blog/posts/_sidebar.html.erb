<form class="well form-search" action="<%= blog_search_path %>" method="GET">
  <input name="q" type="text" placeholder="Поиск">
</form>

<p><a href="<%= blog_path %>" title="Все материалы">Все материалы</a></p>

<h5>Категории:</h5>
<ul>
  <% @categories.all.each do |c| %>
    <li><a href="<%= blog_category_path(c.slug) %>" title="<%= c.name %>"><%= c.name %></a></li>
  <% end %>
</ul>