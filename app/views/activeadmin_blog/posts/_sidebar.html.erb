<div class='sidebar three mobile-four columns'>
  <form class="well form-search" action="<%= blog_search_path %>" method="GET">
    <input name="q" type="text" placeholder="Поиск">
  </form>

  <ul class="side-nav">
    <li><h6>Наш блог</h6></li>
    <li class="divider"></li>
    <li <% if active == 1 %>class='active'<% end %>><%= link_to 'Все статьи', blog_path %></li>
  </ul>

  <ul class="side-nav">
    <li><h6>Категории</h6></li>
    <li class="divider"></li>
    <% @categories.all.each_with_index do |c, index| %>
      <li <% if @category_index == index %>class='active'<% end %>><%= link_to c.name, blog_category_path(c.slug) %></li>
    <% end %>
  </ul>
</div>

